@page "/counter"
@inject ISnackbar Snackbar

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="IncrementCount">Click me</MudButton>
<MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="Break">Break me</MudButton>
<MudButton Variant="Variant.Filled" Color="Color.Secondary" OnClick="Toast">Toast</MudButton>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private void Break()
    {
        throw new Exception("hello, I'm broken");
    }

    private void Toast()
    {
        Snackbar.Add("Cheers!", Severity.Success);
    }
}
